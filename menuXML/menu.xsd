<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="menu">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="categoria" maxOccurs="6">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="piatto" maxOccurs="5">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="nome" type="xs:string" />
                                        <xs:element name="descrizione" type="xs:string" />
                                        <xs:element name="prezzo" type="xs:string" />
                                        <xs:element name="codProdotto" type="xs:string" />
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="tipo" type="xs:string" use="required" />
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>